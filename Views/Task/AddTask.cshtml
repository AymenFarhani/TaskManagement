@model TaskManagement.Models.AddTaskViewModel


<h1>Add Task</h1>
<form asp-action="AddTask" method="post">

<div  class="mt-3">
    <label class="form-label">Title</label>
    <input type="text" class="form-control" asp-for="Title"/>
</div>
<div  class="mt-3">
    <label class="form-label">Description</label>
    <input type="text" class="form-control"  asp-for="Description"/>
</div>
<div  class="mt-3">
    <label class="form-label">CreatedAt</label>
    <input type="date" class="form-control" asp-for="CreatedAt"/>
</div>
<div class="mt-3">
    <label class="form-label">Priority</label>
    <select class="form-select" asp-for="Priority" asp-items="Html.GetEnumSelectList<TaskManagement.Models.Entities.TaskPriority>()">
        <option value="">Select priority</option>
    </select>
</div>
<div  class="mt-3">
    <button type="submit" class="btn btn-primary">AddTask</button>
</div>

</form>
