@model TaskManagement.Models.Entities.TaskItem


<h1>Edit Task</h1>
@if(Model is null) {
    <p> No Task was found with this id</p>
}
else {
<form asp-action="EditTask" method="post">
<div  class="mt-3">
    <label class="form-label">Title</label>
    <input type="text" class="form-control" asp-for="Title"/>
</div>
<div  class="mt-3">
    <label class="form-label">Description</label>
    <input type="text" class="form-control"  asp-for="Description"/>
</div>
<div  class="mt-3">
    <label class="form-label">CreatedAt</label>
    <input type="date" class="form-control" asp-for="CreatedAt" readonly/>
</div>
<div class="mt-3">
            <label class="form-label">Priority</label>
            <select class="form-select" asp-for="Priority" asp-items="Html.GetEnumSelectList<TaskManagement.Models.Entities.TaskPriority>()"></select>
        </div>
<div  class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>
}